    <process id="pizza_margarita_process" name="Приготовление пиццы Маргарита" isExecutable="true">
        
        <startEvent id="StartEvent" name="Начало процесса"/>
        <sequenceFlow id="flow1" sourceRef="StartEvent" targetRef="PrepareIngredients"/>
        <task id="PrepareIngredients" name="Подготовка ингредиентов"/>
        <sequenceFlow id="flow2" sourceRef="PrepareIngredients" targetRef="MixDough"/>
        <task id="MixDough" name="Замешивание теста"/>
        <sequenceFlow id="flow3" sourceRef="MixDough" targetRef="PrepareSauce"/>
        <task id="PrepareSauce" name="Приготовление соуса"/>
        <sequenceFlow id="flow4" sourceRef="PrepareSauce" targetRef="RollDough"/>
        <task id="RollDough" name="Раскатка теста"/>
        <sequenceFlow id="flow5" sourceRef="RollDough" targetRef="AssemblePizza"/>
        <task id="AssemblePizza" name="Сборка пиццы (соус + начинка)"/>
        <sequenceFlow id="flow6" sourceRef="AssemblePizza" targetRef="BakePizza"/>
        <task id="BakePizza" name="Выпекание пиццы"/>
        <sequenceFlow id="flow7" sourceRef="BakePizza" targetRef="ServePizza"/>
        <task id="ServePizza" name="Подача пиццы"/>
        <sequenceFlow id="flow8" sourceRef="ServePizza" targetRef="EndEvent"/>
        <endEvent id="EndEvent" name="Конец процесса"/>
    </process>

